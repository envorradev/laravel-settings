{
    "name": "envorradev/laravel-settings",
    "description": "A package to manage global and model based settings",
    "minimum-stability": "dev",
    "repositories": [
        {
            "type": "path",
            "url": "../type-handler"
        },
        {
            "type": "path",
            "url": "../TaylorNetwork/class-scanner"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/support": "^9",
        "illuminate/database": "^9",
        "illuminate/auth": "^9",
        "illuminate/config": "^9",
        "illuminate/contracts": "^9",
        "envorradev/type-handler": "*",
        "taylornetwork/class-scanner": "*",
        "nikic/php-parser": "*",
        "envorradev/file-class-resolver": "^0.1"
    },
    "require-dev": {
        "orchestra/testbench": "^7.6",
        "ramsey/composer-repl": "^1.4",
        "phpstan/phpstan": "^1.8"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Envorra\\LaravelSettings\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Envorra\\LaravelSettings\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Sam Taylor",
            "email": "sam@envorra.dev"
        }
    ],
    "config": {
        "allow-plugins": {
            "ramsey/composer-repl": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Envorra\\LaravelSettings\\LaravelSettingsProvider"
            ],
            "aliases": {
                "Setting": "Envorra\\LaravelSettings\\Facades\\Setting"
            }
        },
        "ramsey/composer-repl": {
            "includes": []
        }
    },
    "scripts": {
        "test": [
            "vendor/bin/phpunit tests/"
        ]
    }
}
